<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Place Order | DEM FITS</title>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=BBH+Bartle&display=swap" rel="stylesheet">

    <!-- Your stylesheet -->
    <link rel="stylesheet" href="/style.css">

  </head>

  <body class="order-body">
  <div class="order-page">
    <h1>Place Order</h1>

    <div class="form-container">
      <form action="/placeorder" method="POST">

        <fieldset>
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required />
        </fieldset>

        <fieldset>
          <label for="event">Event</label>
          <input type="text" id="event" name="event" placeholder="e.g. Wedding, Job Interview, Birthday Party" required />
        </fieldset>

        <fieldset>
          <label for="dueDate">Due date</label>
          <input type="date" id="dueDate" name="dueDate" required />
        </fieldset>

        <fieldset>
          <label for="top">Top</label>
          <select id="top" name="top">
            <option value="">Select top</option>
            <option value="t-shirt">T-Shirt</option>
            <option value="blouse">Blouse</option>
            <option value="sweater">Sweater</option>
            <option value="hoodie">Hoodie</option>
            <option value="jacket">Jacket</option>
          </select>
          <div class="size-group">
            <span>Size:</span>
            <input type="text" name="topSize" placeholder="e.g. S, M, L" />
          </div>
        </fieldset>

        <fieldset>
          <label for="bottom">Bottom</label>
          <select id="bottom" name="bottom">
            <option value="">Select bottom</option>
            <option value="jeans">Jeans</option>
            <option value="pants">Pants</option>
            <option value="shorts">Shorts</option>
            <option value="skirt">Skirt</option>
            <option value="leggings">Leggings</option>
          </select>
          <div class="size-group">
            <span>Size:</span>
            <input
              type="text"
              name="bottomSize"
              placeholder="e.g. 28, 30, 32"
            />
          </div>
        </fieldset>

        <fieldset>
          <label for="dress">Dress</label>
          <select id="dress" name="dress">
            <option value="">Select dress</option>
            <option value="casual-dress">Casual Dress</option>
            <option value="formal-dress">Formal Dress</option>
            <option value="cocktail-dress">Cocktail Dress</option>
            <option value="maxi-dress">Maxi Dress</option>
            <option value="midi-dress">Midi Dress</option>
            <option value="mini-dress">Mini Dress</option>
          </select>
          <div class="size-group">
            <span>Size:</span>
            <input
              type="text"
              name="dressSize"
              placeholder="e.g. XS, S, M, L"
            />
          </div>
        </fieldset>

        <fieldset>
          <label for="shoes">Shoes: options</label>
          <select id="shoes" name="shoes">
            <option value="">Select shoes</option>
            <option value="sneakers">Sneakers</option>
            <option value="boots">Boots</option>
            <option value="sandals">Sandals</option>
            <option value="heels">Heels</option>
            <option value="flats">Flats</option>
          </select>
          <div class="size-group">
            <span>Size:</span>
            <input type="text" name="shoesSize" placeholder="e.g. 8, 9, 10" />
          </div>
        </fieldset>

        <fieldset>
          <label for="accessories">Accessories: options</label>
          <select id="accessories" name="accessories">
            <option value="">Select accessories</option>
            <option value="hat">Hat</option>
            <option value="scarf">Scarf</option>
            <option value="belt">Belt</option>
            <option value="jewelry">Jewelry</option>
            <option value="bag">Bag</option>
            <option value="sunglasses">Sunglasses</option>
          </select>
        </fieldset>

        <fieldset>
          <label for="instructions">Additional instructions:</label>
          <textarea
            id="instructions"
            name="instructions"
            placeholder="Enter any additional instructions or preferences..."
          ></textarea>
        </fieldset>

        <div class="button-group">
          <button type="button" onclick="clearForm()">Clear</button>
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>

    <script>
      function clearForm() {
        document.querySelector("form").reset();
      }
    </script>
    <a href="/">Home</a>
  </body>
</html>
